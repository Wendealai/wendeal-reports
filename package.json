    "@types/pako": "^2.0.3",
    "@uiw/codemirror-theme-vscode": "^4.23.13",
    "@uiw/react-codemirror": "^4.23.13",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^0.2.0",
    "date-fns": "^2.30.0",
    "isomorphic-dompurify": "^2.25.0",
