{
  "name": "wendeal-reports",
  "version": "1.0.0",
  "description": "Wendeal Reports - 个人深度研究报告汇总平台，基于 Next.js 14 + TypeScript + Tailwind CSS 构建的现代化报告管理系统",
  "author": "Wendeal",
  "license": "MIT",
  "keywords": [
    "reports",
    "research",
    "nextjs",
    "typescript",
    "tailwindcss",
    "document-management",
    "personal-knowledge-base"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wendeal/wendeal-reports.git"
  },
  "homepage": "https://github.com/wendeal/wendeal-reports#readme",
  "bugs": {
    "url": "https://github.com/wendeal/wendeal-reports/issues"
  },
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:netlify": "next build && npm run db:setup || echo 'Build completed with warnings'",
    "db:setup": "node scripts/deploy-setup.js || echo 'Database setup skipped'",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out",
    "export": "next build && next export",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:deploy": "prisma db push && node scripts/deploy-setup.js",
    "netlify:build": "node scripts/netlify-build.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
