    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "form-data": "^4.0.3",
    "node-fetch": "^3.3.2",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
