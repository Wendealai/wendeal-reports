              'å¸‚åœºåˆ†æ': 'market-analysis', 
              'äº§å“è¯„æµ‹': 'product-review',
              'è¡Œä¸šæ´å¯Ÿ': 'industry-insights'
            };
            frontendCategoryId = categoryNameMap[category.name] || 'uncategorized';
          }
        }

        // è½¬æ¢ä¸ºå‰ç«¯Reportç±»å‹
        const frontendReport: Report = {
          id: apiReport.id,
          title: apiReport.title,
          description: apiReport.description || apiReport.content?.substring(0, 200) || '',
          category: frontendCategoryId,
          tags: apiReport.tags || [],
          content: apiReport.content || '',
          filePath: '', // åç«¯æ²¡æœ‰æ–‡ä»¶è·¯å¾„
          createdAt: new Date(apiReport.createdAt),
          updatedAt: new Date(apiReport.updatedAt),
          isFavorite: false, // åç«¯æš‚æ—¶æ²¡æœ‰æ”¶è—åŠŸèƒ½
          readStatus: apiReport.status === 'completed' ? 'completed' : 'unread',
          fileSize: 0,
          wordCount: apiReport.content?.length || 0
        };
        
        return frontendReport;
      });
      
      logger.debug('âœ… è½¬æ¢åçš„æŠ¥å‘Šæ•°æ®:', transformedReports);

      // è½¬æ¢åˆ†ç±»æ•°æ®
      const transformedCategories: Category[] = (categoriesResponse.categories || []).map((apiCategory: ApiCategory) => ({
        id: apiCategory.id,
        name: apiCategory.name,
        description: apiCategory.description,
        color: apiCategory.color,
        icon: apiCategory.icon,
        reportCount: 0, // å°†åœ¨åé¢è®¡ç®—
      }));

      set({ 
        reports: transformedReports,
        categories: transformedCategories
      });
      
      logger.debug(`âœ… æ•°æ®åŠ è½½å®Œæˆ: ${transformedReports.length} ä¸ªæŠ¥å‘Š, ${transformedCategories.length} ä¸ªåˆ†ç±»`);
    } catch (error) {
      logger.error('âŒ ä»æ•°æ®åº“åŠ è½½æ•°æ®å¤±è´¥:', error);
      throw new Error(`æ•°æ®åº“åŠ è½½å¤±è´¥: ${error instanceof Error ? error.message : 'æœªçŸ¥é”™è¯¯'}`);
    } finally {
