  },

  // åˆ·æ–°æ•°æ®
  refreshData: async () => {
    const { loadData } = get();
    await loadData();
  },
  
  // æ£€æŸ¥ç™»å½•çŠ¶æ€
  checkLoginStatus: async () => {
    const token = typeof window !== 'undefined' ? localStorage.getItem('auth_token') : null;
    if (!token) return false;
    
    try {
      // çœŸå®tokenï¼Œè°ƒç”¨APIæ¥éªŒè¯
      await reportsApi.getAll({ limit: 1 });
      return true;
    } catch (error) {
