# 数据库配置
DATABASE_URL="file:/app/data/wendeal.db"

# JWT密钥（生产环境请使用强密码）
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Next.js配置
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED=1

# 应用配置
APP_NAME="Wendeal Reports"
APP_URL="http://localhost:7575"

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR="./public/uploads"

# 日志配置
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# 域名配置（用于Traefik）
DOMAIN="localhost"

# 端口配置
PORT=7575
HTTP_PORT=80
HTTPS_PORT=443
REDIS_PORT=6379

# Redis配置
REDIS_PASSWORD=

# 备份配置
BACKUP_SCHEDULE="0 2 * * *"

# 监控配置
WATCHTOWER_INTERVAL=3600

# 开发模式配置
MOUNT_MODE="ro" 